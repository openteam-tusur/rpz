<%= content_for :title, "#{resource.title}" %>

<% resource.courses.each do |course| %>
  <div class='item block'>
    <%= link_to "#{course.number} курс", year_faculty_course_groups_path(@year, @faculty, course), :class => 'title' %>
    <span><%= t :groups, :count => course.groups.count %></span>
    <span><%= t :groups, :count => course.groups.verified.count %> не выверены сроки и контингент</span>
    <span><%= t :groups, :count => course.groups.without_subspeciality.count %> нет РУП</span>
    <span><%= t :groups, :count => course.groups.without_educations.count %> нет дисциплин </span>
  </div>
<% end %>
