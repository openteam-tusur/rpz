<%= content_for :title, resource.title %>
<%= render resource %>

<% resource.semesters.each do |semester| %>
  <div class='item'><%= semester %></div>
<% end %>

<% resource.faculties.each do |faculty| %>
  <div class='item block <%= faculty.slug %>'>
    <%= link_to faculty, year_faculty_path(@year, faculty), :title => faculty.title, :class => 'title' %>
    <span><%= t :groups, :count => faculty.groups.count %></span>
    <span><%= t :groups, :count => faculty.groups.verified.count %> не выверены сроки семестров и контингент</span>
    <span><%= t :groups, :count => faculty.groups.without_subspeciality.count %> нет РП</span>
    <span><%= t :groups, :count => faculty.groups.without_educations.count %> нет РУП</span>
  </div>
<% end %>
