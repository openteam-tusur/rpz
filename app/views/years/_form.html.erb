<%= simple_form_for resource do |f| %>
  <%= f.input :title %>

  <%= f.simple_fields_for :autumn_semester do |as|%>
    <%= as.object.title %>
    <%= as.input :starts_on, :as => :string %>
    <%= as.input :breaks_on, :as => :string %>
    <%= as.input :ends_on, :as => :string %>
  <% end %>

  <%= f.simple_fields_for :spring_semester do |ss|%>
    <%= ss.object.title %>
    <%= ss.input :starts_on, :as => :string %>
    <%= ss.input :breaks_on, :as => :string %>
    <%= ss.input :ends_on, :as => :string %>
  <% end %>

  <%= f.submit t('create') %>
  <%= link_to t('cancel'), :back %>
<% end %>

